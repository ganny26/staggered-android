<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/profile_favorite_card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="3dp"
        app:contentPadding="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardPreventCornerOverlap="false">


            <!-- cell when expanded content -->
            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >








            </FrameLayout>

            <!-- cell when closed content-->
            <FrameLayout
                android:id="@+id/fav_cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/fav_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"

                    android:padding="0dp">

                    <LinearLayout
                        android:id="@+id/fav_card_header_left"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/fav_recipe_media"
                            android:layout_width="64dp"
                            android:layout_height="64dp"

                            android:src="@drawable/intro3"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/fav_recipe_type"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_marginTop="4dp"

                            android:ems="10"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fav_card_header_middle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/fav_w2ctitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="TextView"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fav_w2cauthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:text="TextView"
                            android:textStyle="italic" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fav_duration_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingRight="4dp"
                                android:text="Duration"
                                android:textAlignment="center"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/fav_preparation_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="30 mins"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="italic" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="8dp">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"
                            android:id="@+id/fav_calories_circle"
                            android:orientation="vertical">





                        </LinearLayout>


                        <TextView
                            android:layout_width="49dp"
                            android:layout_height="16dp"
                            android:layout_marginBottom="8dp"

                            android:text="KCALS"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>